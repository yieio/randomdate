/**app.wxss**/

page {
  background: #f1f1f1;
}

.container {
  height: 100%;
  width: 100%;
  background: #f1f1f1;
  border-top: solid 1px #f1f1f1;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  margin: 28rpx;
  padding-top: 30rpx;
  box-shadow: 0px 0px 3rpx #f1f1f1;
}

.card-spliter {
  border-top: dashed 1px #ddd;
  margin: 20rpx 0;
}

.card-title {
  font-size: 32rpx;
  border-left: solid 16rpx #ff8737;
  padding-left: 14rpx;
}

.bl-green {
  border-left-color: #7acbbd;
}

.bl-purple {
  border-left-color: #865fc1;
}

.bl-orange {
  border-left-color: #ff8737;
}

.bl-blue {
  border-left-color: #46c4f3;
}

.bl-red {
  border-left-color: #eb4986;
}

.bl-yellow {
  border-left-color: #ffb72b;
}

.card-content {
  font-size: 32rpx;
  padding: 30rpx;
}

.card-content-tip, .weui-cells__title {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.card-content-sub-tip {
  font-size: 24rpx;
  color: #888;
  line-height: 2.0;
}

.card-action {
  text-align: center;
  border-top: dashed 1px #ddd;
  background: #fbfbfb;
  border-radius: 0 0 20rpx 20rpx;
}

.card-action button{
  background-color:none;
  border: none;
  border-radius: 0 0 20rpx 20rpx;
  font-size: 32rpx;
}

.card-action button:after {
  background-color:none;
  border: none;
}

.card-action .action-btn-green{
  background:#07c160;
  color:#fff;
  line-height: 3;
}

.card-action .action-btn-green.action-btn-hover{
  background: #7acbbd;
  border-radius: 0 0 20rpx 20rpx;
}

.action-btn {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
}

.action-btn-hover {
  background: #f4f4f4;
  border-radius: 0 0 20rpx 20rpx;
}

.action-btn-white {
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
}

.action-btn-right {
  box-sizing: border-box;
  border-left: dashed 1px #ddd;
  color:#07c160;
}

.action-btn-inline {
  display: inline-block;
  width: 50%;
}

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.my-avatar-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-avatar-wrap image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.my-label-wrap {
  margin-top: 16rpx;
  text-align: center;
}

.label {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  display: inline-block;
  margin: 10rpx;
  border-radius: 30rpx;
  color: #fff;
}

.label {
  background: #7acbbd;
}

.bg-white {
  background: #fff;
}

.bg-green {
  background: #7acbbd;
}

.bg-purple {
  background: #865fc1;
}

.bg-orange {
  background: #ff8737;
}

.bg-blue {
  background: #46c4f3;
}

.bg-red {
  background: #eb4986;
}

.bg-yellow {
  background: #ffb72b;
}

/**表单**/

.card-form-item{
  margin-bottom:20rpx;
}

.weui-input,.weui-picker {
  background: #f9f9f9;
  font-size:30rpx;
  padding:14rpx;
  line-height:37rpx;
  height:37rpx;
}

.weui-picker {
  line-height:52rpx;
  height:52rpx;
}
 

 /**底部弹窗样式**/
.weui-mask {
background: rgba(0,0,0,.6);
}

.weui-mask,.weui-mask_transparent {
position: fixed;
z-index: 1000;
top: 0;
right: 0;
left: 0;
bottom: 0;
}

.weui-half-screen-dialog {
position: fixed;
left: 0;
right: 0;
bottom: 0;
max-height: 75%;
z-index: 5000;
line-height: 1.4;
background-color: #fff;
border-top-left-radius: 12px;
border-top-right-radius: 12px;
overflow: hidden;
padding: 0 24px;
padding: 0 calc(24px + constant(safe-area-inset-right)) constant(safe-area-inset-bottom) calc(24px + constant(safe-area-inset-left));
padding: 0 calc(24px + env(safe-area-inset-right)) env(safe-area-inset-bottom) calc(24px + env(safe-area-inset-left));
}

.weui-half-screen-dialog__desc {
padding-top: 4px;
font-size: 17px;
font-weight: 700;
color: rgba(0,0,0,.9);
line-height: 1.4;

}


.weui-half-screen-dialog__tips {
padding-top: 16px;
font-size: 14px;
color: rgba(0,0,0,.3);
line-height: 1.4;

}

.weui-half-screen-dialog__bd {
word-wrap: break-word;
-webkit-hyphens: auto;
hyphens: auto;
overflow-y: auto;
}



.weui-half-screen-dialog__hd {
font-size: 8px;
height: 8em;
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-align: center;
-webkit-align-items: center;
align-items: center;

}

.weui-half-screen-dialog__ft {
padding: 40px 24px 32px;
text-align: center;

}


.weui-half-screen-dialog__hd__main {
-webkit-box-flex: 1;
-webkit-flex: 1;
flex: 1;
}

.weui-half-screen-dialog__hd__side+.weui-half-screen-dialog__hd__main {
text-align: center;
padding: 0 40px;
}

.weui-half-screen-dialog__title {
display: block;
color: rgba(0,0,0,.9);
font-weight: 700;
font-size: 15px;
}

.weui-half-screen-dialog__subtitle {
display: block;
color: rgba(0,0,0,.5);
font-size: 10px;

}

.weui-half-screen-dialog__hd__side {
  position: relative;
left: -8px;
}

.weui-icon-btn {
background-color: transparent;
background-repeat: no-repeat;
background-position: 50% 50%;
background-size: 100%;
border: 0;
outline: 0;
font-size: 0;
}

button[type='default'] {
color: #06ae56;
background-color: #f2f2f2;
}


