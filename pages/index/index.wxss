/**index.wxss**/

/**login layer**/

.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px dashed #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
  font-size: 42rpx;
}

.content text {
  display: block;
  color: #888;
  margin-top: 30rpx;
  font-size: 32rpx;
}
 
/**正式页面**/

.nextcourse-title {
  border-left: solid 16rpx #3cb371;
}

.course-info-wrap {
  margin-top: 10rpx;
}

.course-date {
  font-size: 42rpx;
  font-weight: bold;
}

.course-date-tip {
  font-size: 24rpx;
  color: #888;
}

.course-name {
  line-height: 1.8;
}

.course-name-tip {
  font-size: 24rpx;
  color: #888;
}

.course-info {
  font-size: 32rpx;
  margin-top: 26rpx;
}

.date-title {
  border-left: solid 16rpx #ff8c00;
}

.mate-title {
  border-left: solid 16rpx #1e90ff;
}

